<%- include('./includes/head.ejs') %>

    <a href="/add-book" class="btn btn-success d-block mx-auto my-5 w-50">
        Add Book
    </a>

    <% if (success_msg.length> 0 ) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success_msg %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
        </div>
        <% } %>

            <% if (books.length> 0) { %>
                <table class='table table-striped mt-5 text-center'>
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Year of Publish</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% books.forEach(book=> { %>
                            <tr>
                                <td>
                                    <%= book.title %>
                                </td>
                                <td>
                                    <%= book.author %>
                                </td>
                                <td>
                                    <%= book.yop %>
                                </td>
                                <td>
                                    <div class="btns d-flex justify-content-center">

                                        <a href="/edit-book/<%= book._id %>/?edit=true"
                                            class="btn btn-info btn-sm mr-2">Edit</a>

                                        <form action="/remove" method="post">
                                            <input type="hidden" value="<%= book._id %>" name="removeBtn">
                                            <button class='btn btn-danger btn-sm'>
                                                X
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <% } else { %>

                    <h4 class="text-center mt-5">Your book list is empty!</h4>
                    <% } %>

                        <%- include('./includes/footer.ejs') %>